{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-pattern",
      "options": {
        "patterns": [
          {
            "name": "Custom API Key Pattern",
            "pattern": "/custom[_-]?api[_-]?key\\s*[=:]\\s*['\"][^'\"]+['\"]/gi",
            "message": "Custom API key detected"
          }
        ]
      }
    }
  ]
}
